// controllers
import {{ camelCase name }}Controller from '~/resources/{{ kebabCase name }}/controller'

export default ({ router }) => router
  .prefix('/{{ pluralKebabCase name }}')

  .post(
    '/',
    ctx => (ctx.status = 503),
    {{ camelCase name }}Controller.store
  )

  .post(
    '/list',
    ctx => (ctx.status = 503),
    {{ camelCase name }}Controller.list
  )

  .post(
    '/find',
    ctx => (ctx.status = 503),
    {{ camelCase name }}Controller.find
  )

  .patch(
    '/',
    ctx => (ctx.status = 503),
    {{ camelCase name }}Controller.patch
  )

  .delete(
    '/',
    ctx => (ctx.status = 503),
    {{ camelCase name }}Controller.delete
  )
