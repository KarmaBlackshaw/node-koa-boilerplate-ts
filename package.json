{
  "name": "node-koa-boilerplate",
  "version": "2.0.9",
  "description": "",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/app",
    "build": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "make:resource": "plop --plopfile ./generator/resource/index.js",
    "make:job": "plop --plopfile ./generator/job/index.js",
    "generate:key": "node ./bin/key-generator.js",
    "generate:env": "node ./bin/env-generator.js",
    "generate:port": "node ./bin/get-free-port.js",
    "release": "release-it",
    "prepare": "npx simple-git-hooks"
  },
  "env": {
    "node": true
  },
  "keywords": [
    "boilerplate",
    "koa",
    "javascript",
    "redis",
    "knex",
    "mysql",
    "socket.io",
    "database",
    "utilities",
    "utilities",
    "logger",
    "env-validate",
    "node"
  ],
  "author": "Ernie Jeash",
  "license": "ISC",
  "dependencies": {
    "@jeash/knex-meta": "^4.1.8",
    "@joi/date": "^2.1.0",
    "@koa/cors": "2.2.2",
    "@types/node": "^20.11.17",
    "axios": "^0.27.2",
    "bcryptjs": "2.4.3",
    "bluebird": "^3.7.2",
    "chalk": "^5.3.0",
    "destr": "^1.2.2",
    "dotenv": "6.1.0",
    "glob": "^10.3.10",
    "joi": "17.3.0",
    "jsonwebtoken": "8.3.0",
    "knex": "^2.5.1",
    "koa": "2.5.3",
    "koa-bodyparser": "4.2.1",
    "koa-compress": "3.0.0",
    "koa-morgan": "^1.0.1",
    "koa-mount": "^4.0.0",
    "koa-router": "7.4.0",
    "koa-static": "^5.0.0",
    "koa2-formidable": "^1.0.3",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.45",
    "mysql": "2.16.0",
    "redis": "^4.6.13",
    "simple-node-logger": "21.8.12",
    "socket.io": "^4.7.4",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/eslint-parser": "^7.23.10",
    "@types/bluebird": "^3.5.42",
    "@types/lodash": "^4.14.202",
    "eslint": "^8.56.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-standard": "4.0.1",
    "faker": "^6.6.6",
    "lint-staged": "^13.3.0",
    "nodemon": "^2.0.22",
    "plop": "^3.1.2",
    "pluralize": "^8.0.0",
    "release-it": "^15.11.0",
    "simple-git-hooks": "^2.9.0"
  },
  "lint-staged": {
    "*.{js,ts}": "npm run lint"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
